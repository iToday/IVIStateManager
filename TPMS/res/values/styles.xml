<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
    </style>
	<style name="AppTheme" parent="@style/AppBaseTheme">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="lab_info">
        <item name="android:textSize">28.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="settings_item_horizontal_devider">
        <item name="android:background">@color/settings_item_divider_color</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/split_one_dip</item>
    </style>
    <style name="select_radio">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">50.0dip</item>
        <item name="android:layout_height">30.0dip</item>
        <item name="android:button">@null</item>
    </style>
</resources>
